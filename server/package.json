{
  "name": "server",
  "version": "1.0.0",
  "description": "Bun server with authentication",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "nodemon index.ts",
    "start": "bun run index.ts",
    "test-db": "bun run test-db.ts",
    "docker:build": "docker build -t logout-all-server:staging .",
    "docker:run": "docker run -p 3001:3001 --env-file .env.staging logout-all-server:staging",
    "staging:up": "docker-compose -f docker-compose.staging.yml up -d",
    "staging:down": "docker-compose -f docker-compose.staging.yml down",
    "staging:logs": "docker-compose -f docker-compose.staging.yml logs -f",
    "staging:rebuild": "docker-compose -f docker-compose.staging.yml up -d --build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.0.2"
  }
}
